@model IList<ProductResult>
@section homepageshare
{
    <partial name="homepageshare"/>
}

<div class="container notselectable">
            <div class="row">
                <div class="boxke col-lg-12">
                    <div class="blockText text-center">
                        <h1 class="text-center text-white ">Products with available articles</h1></div>
                </div>
                
                @foreach (var product in Model)
                {
                    <div class="boxke col-lg-4 col-md-6 col-sm-12">
                        <div class="blockText">
                            <h3 class="text-white text-center text-decoration-underline"><span class="fw-bold">@product.Name</span> </h3>
                            <p class="text-white text-center "><span class="fw-bold">@product.Description</span> </p>
                            <p class="text-white text-center">
                                @{if (product.Manufacturer != null)
                                  {
                                      var print = "Manufacturer: ";
                                      @print
                                      <span class="fw-bold">@product.Manufacturer</span>
                                  }
                                }
                            </p>
                            <p class="text-white text-center">Available: <span class="fw-bold">@product.NumberOfAvailableArticles</span> </p>

                        </div>
                    </div>
                }
        <div class="boxke col-lg-12 notselectable">
                    <div class="blockText text-center">
                        <button class="boxke2 hoverbutton "><a class="nav-link text-dark notselectable" asp-area="" asp-controller="Home" asp-action="RentSingle">Rent article</a></button>
                        <button class="boxke2 hoverbutton "><a class="nav-link text-dark notselectable" asp-area="" asp-controller="Home" asp-action="RentMultiple">Rent multiple articles</a></button>
                    </div>
                </div>

            </div>
</div>
    